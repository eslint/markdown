    "chai": "^5.1.1",
    "eslint": "^9.4.0",
    "eslint-config-eslint": "^11.0.0",
    "globals": "^15.1.0",
    "mocha": "^10.6.0",
    "rollup": "^4.19.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.5.4"
