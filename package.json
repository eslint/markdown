    "prepare": "node ./npm-prepare.cjs",
    "test": "c8 mocha \"tests/**/*.test.js\" --timeout 30000"
  },
  "devDependencies": {
    "@eslint/core": "^0.2.0",
    "@eslint/js": "^9.4.0",
